        protected void btnSearch_OnClick(object sender, EventArgs e)
        {
            BookBLL bookBll = new BookBLL();
            bookBll.BookName = "";
            bookBll.Writter = "";
            bookBll.Publisher = "";
            bookBll.KitaberMainLanguage = "";
            try
            {
                foreach (ListItem listItem in bookCheckBoxList.Items)
                {
                    if (listItem.Selected)
                    {

                        switch (listItem.Value)
                        {
                            case "BN":
                            {
                                bookBll.BookName = txtbxSearch.Text.Trim();
                                break;
                            }
                            case "WN":
                            {
                                bookBll.Writter = txtbxSearch.Text.Trim();
                                break;
                            }
                            case "PN":
                            {
                                bookBll.Publisher = txtbxSearch.Text.Trim();
                                break;
                            }
                            case "BL":
                            {
                                bookBll.KitaberMainLanguage = txtbxSearch.Text.Trim();
                                break;
                            }
                            default:
                            {
                                continue;
                            }
                        }
                        
                    }
                    else
                    {
                        //bookBll.BookName = "";
                        //bookBll.Writter = "";
                        //bookBll.Publisher = "";
                        //bookBll.KitaberMainLanguage = "";
                    }
                }
                DataTable dt=new DataTable();
                dt = bookBll.SearchForBook();
                if (dt.Rows.Count > 0)
                {
                    infoBody.Visible = true;
                    GetSearchedBookList(dt);  
                }
                else
                {
                    string message = "Book Not <span class='actionTopic'> Found</span>.";
                    MyAlertBox("SuccessAlert(\"" + "Process Succeed" + "\", \"" + message + "\", \"\");");
                }
                
            }
            catch (Exception)
            {

                throw;
            }
        }

