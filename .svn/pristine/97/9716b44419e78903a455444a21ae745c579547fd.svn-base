                }
                else
                {
                    string message = "Book <span class='actionTopic'>Update</span> Failed.";
                    MyAlertBox(
                        "var callbackOk = function () { MyOverlayStart(); window.location = \"/UI/Library/Book/List.aspx\"; }; SuccessAlert(\"" +
                        "Process Succeed" + "\", \"" + message + "\", callbackOk);");
                }



            }
            catch (Exception)
            {

                throw;
            }
        }
